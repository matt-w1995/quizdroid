<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnswerFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtCorrectAns"
        android:layout_width="313dp"
        android:layout_height="63dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Correct Answer"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/txtUserAns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUserAns"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="User Answer"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/txtCorrectCount"
        app:layout_constraintEnd_toEndOf="@+id/txtCorrectAns"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/txtCorrectAns"
        app:layout_constraintTop_toBottomOf="@+id/txtCorrectAns" />

    <TextView
        android:id="@+id/txtCorrectCount"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Correct Count"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnFinish"
        app:layout_constraintEnd_toEndOf="@+id/txtCorrectAns"
        app:layout_constraintStart_toStartOf="@+id/txtCorrectAns"
        app:layout_constraintTop_toBottomOf="@+id/txtUserAns" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorrectCount" />
</android.support.constraint.ConstraintLayout>